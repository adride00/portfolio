---
import '@styles/styles.scss'

export interface Props {
	title: string
	pageClass?: string
	showHeader?: boolean
	showFooter?: boolean
	page?: string
}

const {
	title,
	pageClass,
	showHeader = true,
	showFooter = true,
	page = '',
} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100;0,300;0,400;0,500;1,100;1,200;1,400&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body class={pageClass}>
		<main class="main">
			<slot />
		</main>
		<!-- <script src="../js/script.js"></script> -->
	</body>
</html>
